{
  "compilerOptions": {
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": ["es6", "dom"],
    "mapRoot": "./",
    "module": "es2015",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "outDir": "../aot2",
    "removeComments": false,
    "sourceMap": true,
    "suppressImplicitAnyIndexErrors": true,
    "target": "es5",
    "typeRoots": [
      "../node_modules/@types"
    ]
  },
  "files": [
    "./main.ts"
  ],
  "filesGlob": [
    "./**/*.module.ts"
  ],
  "angularCompilerOptions": {
    "genDir": "../aot1",
    "skipMetadataEmit" : true
  }
}
